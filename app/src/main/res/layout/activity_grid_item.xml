<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context=".GridItem"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        />
    <Button
        android:background="@color/colorPrimary"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:onClick="nextSwatch"
        android:text="extract Color"
        android:layout_gravity="top|right"
        android:textColor="@color/blue" />
        //android:id="@+id/bt"

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Color selected"
        android:textColor="@color/colorPrimary"
        android:textSize="35dp" />




    <FrameLayout
        android:id="@+id/layo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        >

    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/griddata"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:src="@drawable/figure1"
        />
        <TextView
            android:id="@+id/text_view_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/holo_red_light" />


</FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="330dp"/>




    <LinearLayout
        android:id="@+id/layoutt"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginTop="360dp"
        android:orientation="horizontal"
        />


    <com.example.firstpage.Fifi
        android:id="@+id/fifi"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="300dp"

        />
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="800dp"
        android:theme="@style/AppTheme.AppBarOverlay.Overlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tollbar"
            android:layout_height="?android:actionBarSize"
            android:layout_width="match_parent"
            android:background="@color/white"
            app:popupTheme="@style/AppTheme.AppBarOverlay.Overlay"/>

    </com.google.android.material.appbar.AppBarLayout>


    <com.thebluealliance.spectrum.SpectrumPalette
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="315dp"
        app:spectrum_autoPadding="true"
        app:spectrum_outlineWidth="1dp"
        app:spectrum_colors="@array/demo_colors"
        android:id="@+id/palette"/>




         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal"/>
           <ImageView
               android:id="@+id/image"
               android:layout_width="match_parent"
               android:layout_height="300dp"
               android:layout_marginTop="355dp"
               android:src="@drawable/figure1"
               android:alpha="0.1"/>
          <ImageButton
              android:layout_marginRight="5dp"
              android:layout_width="110dp"
              android:layout_height="120dp"
              android:layout_marginLeft="100dp"
              android:layout_marginTop="620dp"
             android:id="@+id/color"
             android:src="@drawable/ic_baseline_color_lens_24"/>

             <ImageButton
                 android:id="@+id/save"
                 android:layout_width="110dp"
                 android:layout_height="120dp"
                 android:layout_marginRight="5dp"
                 android:src="@drawable/ic_baseline_save_24"
                 android:layout_marginLeft="210dp"
                 android:layout_marginTop="620dp"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="620dp"
               android:onClick="clearCanvas"
                 android:src="@drawable/ic_baseline_clear_24"/>

          <ImageButton
            android:id="@+id/back"
            android:layout_width="100dp"
            android:layout_height="120dp"
              android:layout_marginTop="620dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />
</FrameLayout>
